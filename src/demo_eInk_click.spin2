CON { timing }

  CLK_FREQ = 270_000_000                                        ' system freq as a constant
  _clkfreq = CLK_FREQ                                           ' set system clock

CON { fixed io pins }

  RX1      = 63  { I }                                          ' programming / debug
  TX1      = 62  { O }

  SF_CS    = 61  { O }                                          ' serial flash
  SF_SCK   = 60  { O }
  SF_SDO   = 59  { O }
  SF_SDI   = 58  { I }

CON { click module io pins }

    ' our Click module is on 16-31!
    EINK_CLICK_PINGROUP = eInkDisplay.PINS_P16_P31

OBJ { the object being demo'd }

    eInkDisplay : "isp_eInk_click"
    eInkImages  : "isp_eInk_demo_images"
    coffeeImage : "isp_image_coffee"

PUB main() | ok, deviceID, uniqMSB, uniqLSB
'' DEMO let's see what our radio hears!

    ' tell object where the module is connected
    ok := eInkDisplay.start(EINK_CLICK_PINGROUP)
    if not ok
        debug("* SPI FAILED to start")
    else
        debug("* SPI started OK")

    eraseDisplay()


    'image_demo()            ' WORKS  43 * 2 seconds runtime!
    text_demoRecreate()     ' WORKS
    'text_demo()             ' WORKS
    'text_demoRegionImage()  ' WORKS!!

    'repeat 10
    '    image_demo()

    debug("* stopped")
    eInkDisplay.stop()

DAT { demonstration data }

    demo_text       BYTE    "eINK" , 0
    demo_text1      BYTE    "Display", 0
    demo_text2      BYTE    "2.13inch", 0
    demo_text3      BYTE    "Vert" , 0
    demo_text4      BYTE    "vCol" , 0

    demo_text00_000 BYTE    "0,0hz" , 0
    demo_text10_050 BYTE    "10,50hz" , 0
    demo_text20_100 BYTE    "20,100hz" , 0
    demo_text30_200 BYTE    "30,200hz" , 0

    ' recreating the document display
    recr_text1      BYTE    "EA EPA20-A",0
    recr_text2      BYTE    "* E-Paper",0
    recr_text3      BYTE    "* 2,4..3,3V",0
    recr_text4      BYTE    "* 4 Grey Levels",0
    recr_text5      BYTE    "* SPI Interface",0

PRI eraseDisplay()

    debug("* erase display")
    eInkDisplay.fillScreen(eInkDisplay.EINK_COLOR_WHITE)
    waitms(5000)

PRI text_demoRegionImage() | pImageBits, imgWidth, imgHeight
    debug("* write border, filled region, and place small cup")

    eInkDisplay.setBackground(eInkDisplay.EINK_COLOR_WHITE)

    ' borderAtXY(X,Y, color, thickness, width, height)
    eInkDisplay.borderAtXY(0, 0, eInkDisplay.EINK_COLOR_BLACK, 1, 61, 250)
    eInkDisplay.borderAtXY(0+2, 0+4, eInkDisplay.EINK_COLOR_DARK_GREY, 1, 61-4, 250-8)

        ' fillRegionAt(X, Y, color, width, height)
    eInkDisplay.fillRegionAt(5, 140, eInkDisplay.EINK_COLOR_DARK_GREY, 50, 50)
    eInkDisplay.fillRegionAt(5, 192, eInkDisplay.EINK_COLOR_LIGHT_GREY, 50, 50)

'{
    pImageBits, imgWidth, imgHeight := coffeeImage.imageAddress(coffeeImage.IMAGE_Coffee)
    if pImageBits <> coffeeImage.IMAGE_UNKNOWN
        eInkDisplay.placeImageAtXY(10, 10, pImageBits, imgWidth, imgHeight, 90)
'}

    eInkDisplay.flushToDisplay()
    waitms(5000)


PRI text_demoRecreate() | leftEdge, firstLine, lineSpacing, pImageBits, imgWidth, imgHeight
    debug("* Create our DEMO image")

    eInkDisplay.setBackground(eInkDisplay.EINK_COLOR_WHITE)

    ' borderAtXY(X,Y, color, thickness, width, height)
    'eInkDisplay.borderAtXY(0, 0, eInkDisplay.EINK_COLOR_LIGHT_GREY, 3, 15, 250)
    ' fillRegionAt(X, Y, color, width, height)
    eInkDisplay.fillRegionAt(0, 0, eInkDisplay.EINK_COLOR_LIGHT_GREY, 15, 250)

    eInkDisplay.setFont(eInkDisplay.FO_VERTICAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_10)
    eInkDisplay.setTextAtXY(-1, 190, @recr_text1)

    eInkDisplay.setFont(eInkDisplay.FO_VERTICAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_7)
    leftEdge := 240
    firstLine := 17
    lineSpacing := 11
    eInkDisplay.setTextAtXY(firstLine + lineSpacing * 0, leftEdge, @recr_text2)
    eInkDisplay.setTextAtXY(firstLine + lineSpacing * 1, leftEdge, @recr_text3)
    eInkDisplay.setTextAtXY(firstLine + lineSpacing * 2, leftEdge, @recr_text4)
    eInkDisplay.setTextAtXY(firstLine + lineSpacing * 3, leftEdge, @recr_text5)

'{
    pImageBits, imgWidth, imgHeight := coffeeImage.imageAddress(coffeeImage.IMAGE_Coffee)
    if pImageBits <> coffeeImage.IMAGE_UNKNOWN
        eInkDisplay.placeImageAtXY(10, 10, pImageBits, imgWidth, imgHeight, 90)
'}

    eInkDisplay.flushToDisplay()
    waitms(5000)

PRI text_demo()
    ' demo display text on screen
    '   X: 0-71
    '   Y: 0-171

    eInkDisplay.setBackground(eInkDisplay.EINK_COLOR_WHITE)
{
    eInkDisplay.lineAtXY(50, 5, 65, 5, eInkDisplay.EINK_COLOR_BLACK)
    eInkDisplay.lineAtXY(50, 10, 65, 10, eInkDisplay.EINK_COLOR_LIGHT_GREY)
    eInkDisplay.lineAtXY(50, 15, 65, 15, eInkDisplay.EINK_COLOR_DARK_GREY)

    eInkDisplay.lineAtXY(20, 5, 20, 15, eInkDisplay.EINK_COLOR_BLACK)
    eInkDisplay.lineAtXY(25, 5, 25, 15, eInkDisplay.EINK_COLOR_LIGHT_GREY)
    eInkDisplay.lineAtXY(30, 5, 30, 15, eInkDisplay.EINK_COLOR_DARK_GREY)
'}
    ' borderAtXY(X,Y, color, thickness, width, height)
    eInkDisplay.borderAtXY(0, 0, eInkDisplay.EINK_COLOR_LIGHT_GREY, 1, 61, 250)
    eInkDisplay.borderAtXY(0+2, 0+4, eInkDisplay.EINK_COLOR_BLACK, 1, 61-4, 250-8)

    'eInkDisplay.lineAtXY(0, 0, 0, 100, eInkDisplay.EINK_COLOR_BLACK)        ' left
    'eInkDisplay.lineAtXY(0, 0, 60, 0, eInkDisplay.EINK_COLOR_BLACK)         ' top

    'eInkDisplay.lineAtXY(60, 4, 60, 100, eInkDisplay.EINK_COLOR_BLACK)      ' right
    'eInkDisplay.lineAtXY(0, 249, 60, 249, eInkDisplay.EINK_COLOR_BLACK)         ' bottom

{
    eInkDisplay.setFont(eInkDisplay.FO_HORIZONTAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_8)
    eInkDisplay.setTextAtXY(0, 0, @demo_text00_000)

    eInkDisplay.setFont(eInkDisplay.FO_HORIZONTAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_8)
    eInkDisplay.setTextAtXY(10, 50, @demo_text10_050)

    eInkDisplay.setFont(eInkDisplay.FO_HORIZONTAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_8)
    eInkDisplay.setTextAtXY(20, 100, @demo_text20_100)

    eInkDisplay.setFont(eInkDisplay.FO_HORIZONTAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_8)
    eInkDisplay.setTextAtXY(30, 200, @demo_text30_200)
'}

'{
    eInkDisplay.setFont(eInkDisplay.FO_HORIZONTAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_18)
    eInkDisplay.setTextAtXY(5, 70, @demo_text)

    'eInkDisplay.setFont(eInkDisplay.FO_HORIZONTAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_8)
    'eInkDisplay.setTextAtXY(5, 120, @demo_text2)
'}
'{
    eInkDisplay.setFont(eInkDisplay.FO_VERTICAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_8)
    eInkDisplay.setTextAtXY(20, 60, @demo_text3)
'}
    eInkDisplay.setFont(eInkDisplay.FO_VERTICAL, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_18)
    eInkDisplay.setTextAtXY(30, 240, @demo_text)

'{
    eInkDisplay.setFont(eInkDisplay.FO_VERTICAL_COLUMN, eInkDisplay.EINK_COLOR_BLACK, eInkDisplay.FONT_Tahoma_8)
    eInkDisplay.setTextAtXY(5, 140, @demo_text4)
'}

    eInkDisplay.flushToDisplay()

    waitms(5000)


PRI image_demo()
    ' draw our two images to display
    eInkDisplay.displayImage(eInkImages.imageAddress(eInkImages.IMAGE_light))
    waitms(1000)

    eInkDisplay.displayImage(eInkImages.imageAddress(eInkImages.IMAGE_dark))
    waitms(1000)

    eInkDisplay.displayImage(eInkImages.imageAddress(eInkImages.IMAGE_light_180))
    waitms(1000)

    eInkDisplay.displayImage(eInkImages.imageAddress(eInkImages.IMAGE_dark_180))
    waitms(1000)



PRI demoRaw()


